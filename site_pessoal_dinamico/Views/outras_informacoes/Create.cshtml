@model site_pessoal_dinamico.Models.outras_informacoes

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Outras Informações</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="descricao_informacao" class="control-label"></label>
                <input asp-for="descricao_informacao" class="form-control" />
                <span asp-validation-for="descricao_informacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
