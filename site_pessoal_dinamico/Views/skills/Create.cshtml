@model site_pessoal_dinamico.Models.skills

@{
    ViewData["Title"] = "Create";
}

<section class="resume-section" id="distincao_premios">
    <div class="resume-section-content">
        <h2 class="mb-5">Criar</h2>

        <h4 class="mb-5">Skills</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="descricao_skills" class="control-label"></label>
                        <input asp-for="descricao_skills" class="form-control" />
                        <span asp-validation-for="descricao_skills" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Criar" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>
</section>
