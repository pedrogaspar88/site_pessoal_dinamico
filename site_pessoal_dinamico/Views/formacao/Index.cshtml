@model IEnumerable<site_pessoal_dinamico.Models.formacao>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome_instituicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome_curso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nivel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.competencias)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome_instituicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome_curso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nivel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.competencias)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.formacaoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.formacaoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.formacaoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
